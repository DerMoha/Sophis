# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# Widget extension target - separate to avoid linking unnecessary frameworks
target 'SophisWidgetExtension' do
  use_frameworks!
  use_modular_headers!

  # Only include the minimal dependencies needed for widgets
  pod 'home_widget', :path => '.symlinks/plugins/home_widget/ios'
end

post_install do |installer|
  # Map deployment targets from the main project to sync with Pods
  target_versions = {}
  installer.aggregate_targets.each do |target|
    target.user_project.targets.each do |t|
      t.build_configurations.each do |config|
        target_versions[t.name] ||= {}
        target_versions[t.name][config.name] = config.build_settings['IPHONEOS_DEPLOYMENT_TARGET']
      end
    end
  end

  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Match Pod target (e.g., Pods-SophisWidgetExtension) to User target (SophisWidgetExtension)
    user_target_name = target.name.sub('Pods-', '')
    
    target.build_configurations.each do |config|
      if target_versions[user_target_name] && target_versions[user_target_name][config.name]
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = target_versions[user_target_name][config.name]
      else
        # Default fallback for pods that aren't target-specific
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      end
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
    end
  end
end
